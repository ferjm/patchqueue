+// Executed to perform the complicated dance of steps necessary to initialize
+// the QuotaManager. This must be performed for each origin before any disk
+// IO occurrs.
+class ClientContext::QuotaInitRunnable final : public nsIRunnable
+                                             , public OpenDirectoryListener
+{
+public:
+  QuotaInitRunnable(ClientContext* aContext,
+                    Client::Type aClientType,
+                    const nsAString& aDirName,
+                    Data* aData,
+                    nsIThread* aTarget,
+                    ClientAction* aInitAction)
+    : mContext(aContext)
+    , mThreadsafeHandle(aContext->CreateThreadsafeHandle())
+    , mQuotaClientType(aClientType)
+    , mDirName(aDirName)
+    , mData(aData)
+    , mTarget(aTarget)
+    , mInitAction(aInitAction)
+    , mInitiatingThread(NS_GetCurrentThread())
+    , mResult(NS_OK)
+    , mState(eInit)
+    , mCanceled(false)
+  {
+    MOZ_ASSERT(mContext);
+    MOZ_ASSERT(!mDirName.IsEmpty());
+    MOZ_ASSERT(mData);
+    MOZ_ASSERT(mTarget);
+    MOZ_ASSERT(mInitiatingThread);
+    MOZ_ASSERT(mInitAction);
+  }
+
+  nsresult Dispatch()
+  {
+    NS_ASSERT_OWNINGTHREAD(QuotaInitRunnable);
+    MOZ_ASSERT(mState == eInit);
+
+    mState = eGetInfo;
+    nsresult rv = NS_DispatchToMainThread(this, nsIThread::DISPATCH_NORMAL);
+    if (NS_WARN_IF(NS_FAILED(rv))) {
+      mState = eComplete;
+      Clear();
+    }
+
+    return rv;
+  }
+
+  void Cancel()
+  {
+    NS_ASSERT_OWNINGTHREAD(QuotaInitRunnable);
+    MOZ_ASSERT(!mCanceled);
+    mCanceled = true;
+    mInitAction->CancelOnInitiatingThread();
+  }
+
+  void OpenDirectory();
+
+  // OpenDirectoryListener methods.
+  virtual void
+  DirectoryLockAcquired(DirectoryLock* aLock) override;
+
+  virtual void
+  DirectoryLockFailed() override;
+
+private:
+  class SyncResolver final : public ClientAction::Resolver
+  {
+  public:
+    SyncResolver()
+      : mResolved(false)
+      , mResult(NS_OK)
+    { }
+
+    virtual void
+    Resolve(nsresult aRv) override
+    {
+      MOZ_ASSERT(!mResolved);
+      mResolved = true;
+      mResult = aRv;
+    }
+
+    bool Resolved() const { return mResolved; }
+    nsresult Result() const { return mResult; }
+
+  private:
+    ~SyncResolver() { }
+
+    bool mResolved;
+    nsresult mResult;
+
+    NS_INLINE_DECL_REFCOUNTING(ClientContext::QuotaInitRunnable::SyncResolver,
+                               override)
+  };
+
+  ~QuotaInitRunnable()
+  {
+    MOZ_ASSERT(mState == eComplete);
+    MOZ_ASSERT(!mContext);
+    MOZ_ASSERT(!mInitAction);
+  }
+
+  enum State
+  {
+    eInit,
+    eGetInfo,
+    eCreateQuotaManager,
+    eOpenDirectory,
+    eWaitForDirectoryLock,
+    eEnsureOriginInitialized,
+    eRunOnTarget,
+    eRunning,
+    eCompleting,
+    eComplete
+  };
+
+  void Complete(nsresult aResult)
+  {
+    MOZ_ASSERT(mState == eRunning || NS_FAILED(aResult));
+
+    MOZ_ASSERT(NS_SUCCEEDED(mResult));
+    mResult = aResult;
+
+    mState = eCompleting;
+    MOZ_ALWAYS_SUCCEEDS(
+      mInitiatingThread->Dispatch(this, nsIThread::DISPATCH_NORMAL));
+  }
+
+  void Clear()
+  {
+    NS_ASSERT_OWNINGTHREAD(QuotaInitRunnable);
+    MOZ_ASSERT(mContext);
+    mContext = nullptr;
+    mInitAction = nullptr;
+  }
+
+  RefPtr<ClientContext> mContext;
+  RefPtr<ThreadsafeHandle> mThreadsafeHandle;
+  Client::Type mQuotaClientType;
+  nsString mDirName;
+  RefPtr<Data> mData;
+  nsCOMPtr<nsIThread> mTarget;
+  RefPtr<ClientAction> mInitAction;
+  nsCOMPtr<nsIThread> mInitiatingThread;
+  nsresult mResult;
+  QuotaInfo mQuotaInfo;
+  RefPtr<DirectoryLock> mDirectoryLock;
+  State mState;
+  Atomic<bool> mCanceled;
+
+public:
+  NS_DECL_THREADSAFE_ISUPPORTS
+  NS_DECL_NSIRUNNABLE
+};
