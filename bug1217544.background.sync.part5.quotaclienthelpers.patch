+// static
+already_AddRefed<ClientContext>
+ClientContext::Create(Listener* aListener, Client::Type aClientType,
+                      const nsAString& aDirName, nsIThread* aTarget,
+                      ClientAction* aInitAction, ClientContext* aOldContext)
+{
+  RefPtr<ClientContext> context = new ClientContext(aListener, aClientType,
+                                                    aDirName, aTarget,
+                                                    aInitAction);
