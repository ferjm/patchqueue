+ClientContext::ClientContext(Listener* aListener, Client::Type aClientType,
+                             const nsAString& aDirName, nsIThread* aTarget,
+                             ClientAction* aInitAction)
+  : mListener(aListener)
+  , mTarget(aTarget)
+  , mClientType(aClientType)
+  , mDirName(aDirName)
+  , mData(new Data(aTarget))
+  , mState(STATE_CONTEXT_PREINIT)
+  , mOrphanedData(false)
+  , mInitAction(aInitAction)
+{
+  MOZ_ASSERT(mListener);
+  MOZ_ASSERT(mTarget);
