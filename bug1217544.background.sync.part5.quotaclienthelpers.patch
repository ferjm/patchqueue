+void
+ClientContext::RemoveActivity(Activity* aActivity)
+{
+  NS_ASSERT_OWNINGTHREAD(ClientContext);
+  MOZ_ASSERT(aActivity);
+  MOZ_ALWAYS_TRUE(mActivityList.RemoveElement(aActivity));
+  MOZ_ASSERT(!mActivityList.Contains(aActivity));
+}
