+class SyncRegistryAction {
+public:
+  uint64_t mActorId;
+  nsID mRequestId;
+
+protected:
+  SyncRegistryAction(const uint64_t aActorId,
+                     const nsID& aRequestId)
+    : mActorId(aActorId)
+    , mRequestId(aRequestId)
+  {}
+
